@model MyWebsite.Application.DTOs.ViewModels.CategoryViewModel

<!-- Vertically Centered Modal -->
<div class="col-lg-4 col-md-6">
    <div class="mt-4">
        <!-- Modal -->
        <div class="modal fade" id="saveModal" tabindex="-1" aria-hidden="true" data-backdrop="static">
            <form asp-action="SaveData" asp-controller="Categories" asp-area="Admin" method="post" id="formCategory" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="saveModalTitle">Tạo mới</h5>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            @if (Model.ImageData != null)
                            {
                                <input type="hidden" asp-for="ImageData" value="@Convert.ToBase64String(Model.ImageData)" />
                            }
                            else{
                                <input type="hidden" asp-for="ImageData" />
                            }
                            

                            <div class="row">
                                <div class="d-flex align-items-start align-items-sm-center gap-6">
                                    @* Hiển thị hình ảnh khi load img *@
                                    <div id="previewMainImage" class="mb-2">
                                        <img id="previewImage" class="img-thumbnail" alt="Ảnh sản phẩm" style="max-height: 150px">
                                    </div>

                                    <div class="button-wrapper">
                                        <label class="btn btn-sm btn-primary me-3 mb-4" tabindex="0">
                                            <span class="d-none d-sm-block">Cập nhật ảnh mới</span>
                                            <i class="ri-upload-2-line d-block d-sm-none"></i>
                                            <input type="file" name="postFile" class="form-control mb-2" onchange="previewMainImage(this)" hidden accept="image/png, image/jpeg" />
                                        </label>
                                        <div>Chấp nhận file JPG hoặc PNG</div>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col mb-6 mt-2">
                                    <div class="form-floating form-floating-outline">
                                        <input type="text" asp-for="Name" class="form-control" placeholder="Nhập tên danh mục" required />
                                        <label asp-for="Name">Tên danh mục</label>
                                        <div class="invalid-feedback">
                                            Vui lòng nhập tên danh mục!
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col mb-6 mt-2">
                                    <div class="form-floating form-floating-outline">
                                        <select asp-for="ParentId" class="form-select" asp-items="ViewBag.CategoryId">
                                            <option selected></option>
                                        </select>
                                        <label asp-for="ParentId"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                Đóng
                            </button>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
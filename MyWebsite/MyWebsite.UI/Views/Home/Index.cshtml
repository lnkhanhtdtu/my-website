@model IEnumerable<MyWebsite.Application.DTOs.ViewModels.BannerViewModel>

@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

    <div id="hero-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                var imgSrc = MyWebsite.UI.Utilities.ImageHelper.GetImageSource(item.ImageData, "/client/assets/img/hero-carousel/hero-carousel-2.jpg");
                var isFirst = Model.First() == item;

                <div class="carousel-item @(isFirst ? "active" : "")">
                    <img src="@imgSrc" alt="@item.Description">
                    <div class="carousel-container">
                        <h2>@item.Title<br></h2>
                        <p>@item.Description</p>
                        @* <a href="#" class="btn-get-started">Xem chi tiết</a> *@
                    </div>
                </div>
            }
        }
        else
        {
            <div class="carousel-item active">
                <img src="~/client/assets/img/hero-carousel/hero-carousel-2.jpg" alt="">
                <div class="carousel-container">
                    <h2>Chất Lượng Vượt Trội<br></h2>
                    <p>Nâng tầm nông sản Việt với giải pháp bao bì tối ưu.</p>
                    @* <a href="#featured-services" class="btn-get-started">Get Started</a> *@
                </div>
            </div><!-- End Carousel Item -->

            <div class="carousel-item">
                <img src="~/client/assets/img/hero-carousel/hero-carousel-3.jpg" alt="">
                <div class="carousel-container">
                    <h2>Đồng hành cùng nhà nông</h2>
                    <p>Cung cấp bao bì đa dạng, bảo vệ nông sản, tăng giá trị sản phẩm.</p>
                    @* <a href="#featured-services" class="btn-get-started">Get Started</a> *@
                </div>
            </div><!-- End Carousel Item -->

            <div class="carousel-item">
                <img src="~/client/assets/img/hero-carousel/hero-carousel-1.jpg" alt="">
                <div class="carousel-container">
                    <h2>Giải pháp bao bì nông sản toàn diện</h2>
                    <p>SAGRIBAGS -  Uy tín - Chất lượng - Giá cả cạnh tranh.</p>
                    @* <a href="#featured-services" class="btn-get-started">Get Started</a> *@
                </div>
            </div><!-- End Carousel Item -->
        }
        
        <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
        </a>

        <ol class="carousel-indicators"></ol>

    </div>

</section><!-- /Hero Section -->
